<h2><%= @tournament.name %> Entrants</h2>

<div data-controller="entrants"
     data-entrants-submit-url-value="/tournaments/<%= @tournament.id %>/entrants/update_all"
     data-entrants-rows-value="<%= @entrants %>"
>
  <revo-grid id="editgrid" data-entrants-target="grid" style="height:600px"></revo-grid>
  <div class="m-4">
    <button data-action="entrants#addRow"
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700 rounded">
      Add entrant
    </button>
    <button data-action="entrants#submit"
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700 rounded"
    >
      Save changes
    </button>
  </div>
</div>

<style>
.deleted {
  text-decoration: line-through;
  color: lightblue;
  background-color: darkgrey;
}
</style>

